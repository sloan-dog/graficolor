<h1>Palettes#index</h1>

<p>Find me in app/views/palettes/index.html.erb</p>
<% @current_user.palettes.each do |palette| %>
<div class="row">
        <div class="col s12 m12">
          <div class="card grey darken-4">
          <div class="row grey z-depth-0">
              <span class="card-title"><%= palette.name %></span>
            </div>
            <div class="card-content white-text">
                <% palette.paints.each do |p| %>
                  <% bc = p.component1 %>
                  <div class='halign-wrapper picked_paint' style="background-color:#<%= bc %>"></div>
                <% end %>
            </div>
            <div class="card-action">
              <%= link_to "", edit_palette_path(palette), class: "waves-effect waves-light btn" %>
              <a class="waves-effect waves-light btn" href="edit_palette">Edit</a>
              <a class="waves-effect waves-light btn red">Delete</a>
            </div>
          </div>
        </div>
</div>
<% end %>
