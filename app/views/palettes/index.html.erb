<h2>My Palettes</h2>
<% @current_user.palettes.each do |palette| %>
<div class="row">
        <div class="col s12 m12">
          <div class="card grey darken-4">
          <div class="row grey z-depth-0">
              <span class="card-title"><%= palette.name %></span>
            </div>
            <div class="card-content white-text">
                <% palette.paints.each do |p| %>
                  <% bc = p.component1 %>
                  <div class='halign-wrapper picked_paint' style="background-color:#<%= bc %>"></div>
                <% end %>
            </div>
            <div class="card-action">
              <%= link_to "Edit", edit_palettes_path(palette.id), class: "waves-effect waves-light btn" %>
              <%= link_to "Delete", delete_palette_path(palette.id), method: :delete, class: "waves-effect waves-light btn red" %>
            </div>
          </div>
        </div>
</div>
<% end %>
